@{
    var footerModel = ViewData["FooterModel"] as p3.Models.FooterModel;
}

<style>
    .footer-grid-container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr; 
        gap: 40px; 
        padding: 40px;
        width: 100%;
        box-sizing: border-box;
        border-top: 1px solid black;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iSchool</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui-datatables/jquery-datatables.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui-gallery/css/blueimp-gallery.min.css" />
    <link rel="stylesheet" href="~/lib/simple-text-rotator//simpletextrotator.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/p3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">p3</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Courses">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Employment">Employment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="People">Staff Directory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="News">News</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-grid-container">
            <div class="social">
                <p><b>@footerModel.social.title</b></p>
                <p>@footerModel.social.tweet</p>
                <p>@footerModel.social.by</p>

                <p><a href="@footerModel.social.twitter">Twitter</a></p>
                <p><a href="@footerModel.social.facebook">Facebook</a></p>
            </div>
            <div class="quicklinks">
                <p><b>Quick Links</b></p>
                @foreach (var quicklink in @footerModel.quickLinks)
                {
                    <p><a href="@quicklink.href">@quicklink.title</a></p>
                }
                <p><a href="@footerModel.news">@footerModel.news</a></p>
            </div>
            <div class="copyright">
                <p><b>@footerModel.copyright.title</b></p>
                <p>@Html.Raw(footerModel.copyright.html)</p>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/jquery-ui-datatables/datatables.js"></script>
    <script src="~/lib/jquery-ui-gallery/js/blueimp-gallery.min.js"></script>
    <script src="~/lib/simple-text-rotator//jquery.simple-text-rotator.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
