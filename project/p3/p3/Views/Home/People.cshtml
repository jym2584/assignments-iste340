@model p3.Models.PeopleModel

@{
    ViewData["Title"] = "People Page";
}

<!-- Add necessary CSS and jQuery UI links -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

<div class="container">
    <h1 class="text-center mt-4">@Model.title</h1>
    <p class="text-center">@Model.subTitle</p>

    <!-- Accordion for Faculty -->
    <h2 class="mt-5">Our Faculty</h2>
    <div id="accordion">
        @foreach (var faculty in Model.faculty)
        {
            <h3>@faculty.name (@faculty.title)</h3>
            <div>
                <p><strong>Tagline:</strong> @faculty.tagline</p>
                <p><strong>Interests:</strong> @faculty.interestArea</p>
                <p><strong>Office:</strong> @faculty.office</p>
                @if (!string.IsNullOrEmpty(faculty.website))
                {
                    <p><strong>Website:</strong> <a href="@faculty.website" target="_blank">@faculty.website</a></p>
                }
                <p><strong>Phone:</strong> @faculty.phone</p>
                <p><strong>Email:</strong> <a href="mailto:@faculty.email">@faculty.email</a></p>
                @if (!string.IsNullOrEmpty(faculty.twitter))
                {
                    <p><strong>Twitter:</strong> <a href="https://twitter.com/@faculty.twitter" target="_blank">@faculty.twitter</a></p>
                }
                @if (!string.IsNullOrEmpty(faculty.facebook))
                {
                    <p><strong>Facebook:</strong> <a href="@faculty.facebook" target="_blank">@faculty.facebook</a></p>
                }
            </div>
        }
    </div>

    <!-- Accordion for Staff -->
    <h2 class="mt-5">Our Staff</h2>
    <div id="accordion">
        @foreach (var staff in Model.staff)
        {
            <h3>@staff.name (@staff.title)</h3>
            <div>
                <p><strong>Tagline:</strong> @staff.tagline</p>
                <p><strong>Interests:</strong> @staff.interestArea</p>
                <p><strong>Office:</strong> @staff.office</p>
                @if (!string.IsNullOrEmpty(staff.website))
                {
                    <p><strong>Website:</strong> <a href="@staff.website" target="_blank">@staff.website</a></p>
                }
                <p><strong>Phone:</strong> @staff.phone</p>
                <p><strong>Email:</strong> <a href="mailto:@staff.email">@staff.email</a></p>
                @if (!string.IsNullOrEmpty(staff.twitter))
                {
                    <p><strong>Twitter:</strong> <a href="https://twitter.com/@staff.twitter" target="_blank">@staff.twitter</a></p>
                }
                @if (!string.IsNullOrEmpty(staff.facebook))
                {
                    <p><strong>Facebook:</strong> <a href="@staff.facebook" target="_blank">@staff.facebook</a></p>
                }
            </div>
        }
    </div>
</div>
