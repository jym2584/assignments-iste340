@model p3.Models.NewsModel;
@{
    ViewData["Title"] = "News Page";
}

<style>
    .ui-tabs-horizontal {
        display: flex;
        align-items: stretch;
        width: 100%;
        height: 100%;
    }

        .ui-tabs-horizontal .ui-tabs-nav {
            list-style-type: none;
            padding: 0;
            margin: 0;
            width: 20%;
            display: flex;
            flex-direction: column;
            overflow-y: auto;
            max-height: calc(100vh - 50px);
        }

            .ui-tabs-horizontal .ui-tabs-nav li {
                margin: 0;
                border-bottom: 1px solid #ccc;
            }

                .ui-tabs-horizontal .ui-tabs-nav li a {
                    text-decoration: none;
                    display: block;
                    width: 100%;
                    text-align: center;
                    padding: 10px 0;
                    box-sizing: border-box;
                    white-space: normal; 
                    word-wrap: break-word;
                    overflow-wrap: break-word; 
                }

        .ui-tabs-horizontal .ui-tabs-panel {
            padding: 20px;
            width: 80%;
        }
</style>

<div style="height: calc(100vh - 50px); overflow: hidden;">
    <div id="tabs" class="ui-tabs-horizontal">
        <ul class="ui-tabs-nav">
            @for (int i = 0; i < @Model.older.Count(); i++)
            {
                <li><a href="#tabs-@(i+1)">@Model.older[i].title</a></li>
            }
        </ul>
        @for (int i = 0; i < @Model.older.Count(); i++)
        {
            <div id="tabs-@(i+1)" class="ui-tabs-panel">
                <h4>@Model.older[i].title</h4>
                <h5>@Model.older[i].date</h5>
                <img src="https://picsum.photos/400/200?random=$@(i+1)"/>
                <p>@Model.older[i].description</p>
            </div>
        }
    </div>
</div>

